{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container">
			<h1>{{ post.title }}</h1>
			<p>{{ post.content }}</p>
			<span>Dodano: {{ post.created|date('H:i d/m/Y')}}</span>
			<h2>Komentarze</h2>
			{% if app.user %}
				{{ form_start(form) }}
					{{ form_widget(form) }}
					<button>Dodaj</button>
				{{ form_end(form) }}
			{% else %}
			<p>Komentarze tylko dla zalogowanych. <a href="{{ path('fos_user_security_login') }}">Login</a></p>
			{% endif %}
			{% for comment in post.comments %}<p>{{ comment.content }}</p>{% endfor %}
        </div>
    </div>
{% endblock %}

